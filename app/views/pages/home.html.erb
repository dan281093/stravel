<% if current_user %>
  <div class="container-home">
    <div class="container">
      <div class="row">
        <div class="text-center">
          <%= image_tag('stravel.png', size: "100x100", class: "small-margin") %>
          <h1 class="title">STRAVEL</h1>
          <h4 class="catch-phrase">Find a cool night out together!</h4>
        </div>
      </div>
      <div class="row">
        <div class="text-center medium-margin">
            <%= link_to "Get Started", choose_path ,class: "btn btn-primary button-event-signin"%>
        </div>
        <div class="text-center small-margin ">
            <%= link_to "Sign Out", destroy_user_session_path, method: :delete ,class: "btn btn-light sign-out button-event-signout" %>
        </div>
        <div class="text-center">
          <p style="color: white; margin-top: 14vh;">STRAVEL makes it easy to meet likeminded people for a great night out together</p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container-home">
    <div class="container">
      <div class="row">
        <div class="text-center">
        <%= image_tag('stravel.png', size: "100x100", class: "small-margin") %>
          <h1 class="title">STRAVEL</h1>
          <h4 class="catch-phrase">Find a cool night out together!</h4>
        </div>
      </div>
      <div class="container-home-buttons">
      <div class="row-home-buttons">
        <div class="text-center small-margin">
        <div class="text-center small-margin">
          <%= link_to "Sign Up", new_user_registration_path ,class: "btn btn-primary button-event-signup"%>
            <%= link_to "Sign In", user_session_path ,class: "btn btn-primary button-event-signin"%>
        </div>
        </div>
        <div class="text-center">
          <p style="color: white; margin-top: 20vh;">STRAVEL makes it easy to meet likeminded people for a great night out together</p>
        </div>
      </div>
    </div>
  </div>
<% end %>
