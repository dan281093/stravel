<% if user_signed_in? %>
<div class="navbar-wagon">
  <%= link_to choose_path, class: "navbar-wagon-item navbar-wagon-link " do %> <%= image_tag "stravel.png", class: "dashboard" %>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <!-- Links when logged in -->
    <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
      <% if current_user %>
      <div class="dropdown">
        <%= image_tag avatar_url(current_user) , class: "avatar-dropdown", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu layer">
          <li> <%= link_to edit_user_registration_path do %>
            <i class="fa fa-user"></i>         <%= t(".profile", default: "Edit profile") %>
          <% end %></li>
          <li> <%= link_to events_search_path do %>
            <i class="far fa-calendar-alt"></i>        <%= t(".profile", default: "Join an event") %>
          <% end %></li>
          <li><%= link_to dashboards_path do %>
            <i class="fa fa-cog"></i> <%= t(".choose", default: "Manage my events") %>
          <% end %></li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>
        </ul>
      </div>
      <% end %>
    </div>
    <% else %>
    <!-- Login link (when logged out) -->
    <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item burger hidden-md hidden-lg">
    <% if current_user %>
    <div class="dropdown">
      <%= image_tag avatar_url(current_user) , class: "avatar-dropdown", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu layer">
        <li> <%= link_to edit_user_registration_path do %>
          <i class="fa fa-user"></i>         <%= t(".profile", default: "Edit Profile") %>
        <% end %></li>
        <li> <%= link_to events_search_path do %>
          <i class="far fa-calendar-alt"></i>        <%= t(".profile", default: "Join an event") %>
        <% end %></li>
        <li>              <%= link_to dashboards_path do %>
          <i class="fa fa-cog"></i> <%= t(".choose", default: "Dashboard") %>
        <% end %></li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>
    <% end %>
  </div>
</div>
