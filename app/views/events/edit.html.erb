<div class="wrapper-forms">
<h2 style="text-align: center;">Edit Your Event!</h2>
  <div class="flex-container">
    <div class="row">
      <div class="text-center">
        <div class="form-group">
          <div class="forms-flex-body">
            <%= simple_form_for @event do |f| %>
              <div class="form-space">
              <%= f.input :title, required: true, label: 'Title', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-space">
              <%= f.input :address, required: true, label: 'Location', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-space">
              <%= f.input :description, required: true, label: 'Description', input_html: { class: 'form-control' } %>
              </div>
               <div class="form-space">
              <%= f.input :date, html5: true, required: true, label: 'Date', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-space">
              <%= f.submit "Edit", class: 'button-event' %>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
