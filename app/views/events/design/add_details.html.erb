<div class="wrapper-forms">
<h2 class="h2-choose" style="text-align: center;">Design Your Event!</h2>
  <div class="flex-container">
    <div class="row">
      <div class="text-center">
        <div class="form-group">
          <div class="forms-flex-body">
            <%= simple_form_for @event, url: wizard_path, method: :put do |f| %>
              <div class="form-space">
              <%= f.input :title, required: true, label: 'Title', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-space">
              <%= f.input :address, required: true, label: 'Location', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-space">
              <%= f.input :description, required: true, label: 'Description', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-space flex-inline">
              <%= f.input :date, html5: true, required: true, label: 'Date' %>
              </div>
              <div class="form-space flex-inline">
              <%= f.input :time, required: true, label: 'Time',input_html: { class: 'time-picker' } %>
              </div>
              <div class="form-space button-event small-margin">
              <%= f.submit "Continue" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
