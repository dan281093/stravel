
<div class="container">
  <div class="LOGO">
    <h1>STRAVEL</h1>
  </div>
</div>

<%= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>

<div class="container">
  <div class="name">
    <h1><%= @attendee.user.first_name %></h1>
  </div>
</div>

      <div class="container">
<div class="name">
  <p><%= @attendee.user.description %></p>
</div>
</div>
<% if @attendee.status == 'pending '%>

    <p><%= link_to "Accept", event_attendee_path(@event, @attendee, query: "Accept"), method: :patch %></p>
    <p><%= link_to "Decline", event_attendee_path(@event, @attendee, query:"Decline"), method: :patch %></p>
    <% else %>

    <h4><%= @attendee.status  %></h4>
<% end %>
