<div class="container show">
  <div class="h2-choose small-margin text-center">
    <%= @event.title %>
  </div>
  <br>
    <div class="card-event-show">
      <%= image_tag avatar_url(@event.host), class: 'card-avatar-show' %>
      <h2 class="small-text"><%= @event.host.first_name %></h2>
    </div>
  <br>
    </div>

  <div class="row">
    <div class="new-card">
      <p class="left-p"> <%= image_tag "icons/localisation.svg" %></p>
      <p class="left-p-show"><%= @event.address %></p>
    </div>
    <div class="new-card">
      <p class="left-p"> <%= image_tag "icons/calendar.svg" %></p>
      <p class="left-p-show"><%= @event.date.strftime('%d-%b-%Y') %></p>
    </div>
    <div class="new-card">
      <p class="left-p"> <%= image_tag "icons/time.svg" %></p>
      <p class="left-p-show"><%= @event.time.strftime('%H:%M') %></p>
    </div>
  </div>


  <div class="col-xs-12 card-center small-margin">
    <div class="card-event-show1">
      <p class="center-p"><%= @event.description %></p>
    </div>
    <% if current_user == @host %>
    <div class="small-margin">
      <%= link_to "Manage Attendees", event_attendees_path(@event), class: "add-button" %>
      <%= link_to "Edit my Event", edit_event_path(@event), class: "add-button" %>
      <%= link_to "Delete this Event", event_path(@event), method: :delete, class: "add-button" %>
      <% else %>

      <% if @upcoming_events.include?(@event) %>
        <%= link_to "Dashboard", dashboards_path, class: "add-button small-margin" %>
      <% else  %>

          <button type="button" class="add-button" data-toggle="modal" data-target="#exampleModalCenter">
        Join Event
          </button>
      <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <img src="https://i.ibb.co/nwYNx8G/cocktail.png" alt="cocktail" border="0">
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= link_to event_attendees_path(@event), method: :post do %>
              <button type="button" class="add-button">Confirm Event</button>
        <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    </div>
    <% end %>
  </div>
</div>
</div>

