<div class="container">
  <h1>STRAVEL</h1>

<div class="row">
  <div class="col-xs-12">
    <div class="map-container">
      <div
        id="map"
        style="width: 100%;
        height: 250px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
      </div>
    </div>
  </div>

    <div class="row">
      <% @events.each do |event| %>
        <div class="col-xs-12">
          <div class="card-center">
            <div class="card-event-show1">
              <p class="center-p">Location</p>
              <div class="card">
                <p class="left-p"><%= event.title %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
