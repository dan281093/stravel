<div class="container">
  <h1 class="logo-stravel">STRAVEL</h1>
    <div class="row">
      <div class="col-xs-12">
        <div class="map-container">
          <div
            id="map"
            style="width: 100%;
            height: 250px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
</div>
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% @events.each do |event| %>
          <div class="card-center">
            <div class="card-event-design">
              <div class="card">
                <p class="left-p"><%= event.title %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
    <%= link_to events_path do %>
      <div class="text-center">
        <button class="apply-button">
          Apply
        </button>
      </div>
    </div>
    <% end %>
   </div>
